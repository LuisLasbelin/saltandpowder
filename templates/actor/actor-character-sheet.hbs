<form class="{{cssClass}} {{actor.type}} flexrow" autocomplete="off">
  <section class="bodysection">
    {{!-- Sheet Header --}}
    <header class="sheet-header">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100" />
      <div class="header-fields">
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
        <div>
          <span class="label">{{localize 'SAP.Stress'}}</span>
          <div class="stress-dots">
            {{#if system.stress1}}
            <div class="stress active"></div>
            {{else}}
            <div class="stress"></div>
            {{/if}}
            {{#if system.stress2}}
            <div class="stress active"></div>
            {{else}}
            <div class="stress"></div>
            {{/if}}
            {{#if system.stress3}}
            <div class="stress active"></div>
            {{else}}
            <div class="stress"></div>
            {{/if}}
            {{#if system.stress4}}
            <div class="stress active"></div>
            {{else}}
            <div class="stress"></div>
            {{/if}}
            {{#if system.stress5}}
            <div class="stress active"></div>
            {{else}}
            <div class="stress"></div>
            {{/if}}
          </div>
        </div>
      </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      {{!-- Default tab is specified in actor-sheet.mjs --}}
      <a class="item" data-tab="skills">
        {{localize 'SAP.Skills'}}
      </a>
      <a class="item" data-tab="equipment">
        {{localize 'SAP.Equipment'}}
      </a>
      <a class="item" data-tab="description">
        {{localize 'SAP.Notes'}}
      </a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

      {{!-- Owned Skills Tab --}}
      <div class="tab skills" data-group="primary" data-tab="skills">
        {{> "systems/saltandpowder/templates/actor/parts/actor-skills.hbs"}}
      </div>

      <div class="tab equipment" data-group="primary" data-tab="equipment">
        {{> "systems/saltandpowder/templates/actor/parts/actor-items.hbs"}}
      </div>

      {{!-- Biography Tab --}}
      <div class="tab biography" data-group="primary" data-tab="description">
        {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data
        to
        the rollData property. --}}
        {{editor system.biography target="system.notes" rollData=rollData button=true owner=owner editable=editable}}
      </div>

    </section>
  </section>

</form>